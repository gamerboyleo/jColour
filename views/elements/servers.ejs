
    <aside id="nav" class="column is-3 is-narrow-mobile is-fullheight section server-column is-blue">
        <a class="closebtn" onclick="nav()">&#9776;</a>
        <div class="nav-content" id="nav-content">
            <ul class="menu-list">
                <li>
                    <a href="/" id="button-home" class="subtitle is-5 <%= id ? '' : 'is-active'%> is-white">
                        Home
                    </a>            
                </li>
            </ul>
            <p class="menu-label subtitle is-4 is-white">Servers</p>
            <ul class="menu-list">
            
                <% if (auth) {
                    commonServers.sort(function (a, b) {
                        return (a.name.toUpperCase() < b.name.toUpperCase()) ? -1 : (a.name.toUpperCase() > b.name.toUpperCase()) ? 1 : 0;
                    }).forEach(function (server) { %>
                        <li>
                            <a href="/<%= server.id %>" id="button-<%= server.id%>" class="subtitle is-5 <%= server.id === id ? 'is-active' : '' %> is-white">
                                <span style="vertical-align:middle" class="icon">
                                    <img src="<%= server.iconurl %>" class="rounded-img" alt="Server">
                                </span>
                                <%= server.name %> <%- server ? server.roles.length === 0 ? '<span class="has-no-colours tooltip">ðŸš« <span class="tooltip-text">This server has no colours!</span> </span>' : '' : '' %>
                            </a>
                        </li>
                    <% }) 
                }
                if (commonServers.length === 0) { %>
                    <li>
                        <a href="/demo" id="button-noservers" class="subtitle is-5 is-white <%= page === 'demo' ? 'is-active' : '' %>">
                            Demo Server
                        </a>
                    </li>
                <% } %>              
            </ul>
            <p class="menu-label subtitle is-4 is-white">Options</p>
            <ul class="menu-list">
                <% if (auth) { %>
                    <% if (server && !(page === 'demo')) { %>
                        <li>
                            <a onClick="getRandRole()" id="button-random" class="subtitle is-5 is-white">
                                Random Colour
                            </a>
                        </li>
                        <li>
                            <a href="/auth" id="button-hex" class="subtitle is-5 is-white">
                                Hex Colour
                            </a>
                        </li>
                        <li>
                            <a onClick="getPickedRole()" id="button-pick" class="subtitle is-5 is-white">
                                Pick Colour
                            </a>
                        </li>
                        <br />
                        <% if (user ? user.manageRoles : false) { %>
                            <br />
                            <li>
                                <a href="/<%= server.id %>/settings" id="button-serversettings" class="subtitle is-5 <%= page === 'settings' ? 'is-active' : '' %> is-white">
                                    Server settings
                                </a>
                            </li>
                        <% } %>
                    <% } 
                } %>
                <li>
                    <a href="/invite" id="button-invite" class="subtitle is-5 is-white">
                        Add me to more servers!
                    </a>
                </li>
                <li>
                    <a href="/docs" id="button-invite" class="subtitle is-5 is-white">
                        Documentation
                    </a>
                </li>
                <% if (auth && user) { %>
                    <li>
                        <a href="/logout" id="button-logout" class="subtitle is-5 is-white">
                            Log out (<%= user.tag %>)
                        </a>
                    </li>
                <% } else { %>
                    <li>
                        <a href="/auth" id="button-login" class="subtitle is-5 is-active is-white">
                            Log in
                        </a>
                    </li>
                <% } %>
            </ul>
        </div>
    </aside>

<script>
    function openNav() {
        document.getElementById("nav").style.height = "100%";
        document.getElementById("nav-content").style.display = "block";
    }

    function closeNav() {
        document.getElementById("nav").style.height = "0%";
        document.getElementById("nav-content").style.display = "none";
    }

    function nav() {
        var display = document.getElementById("nav-content").style.display;
        if (display !== "block") {
            openNav()
        } else {
            closeNav()
        }
    }
</script>